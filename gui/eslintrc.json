{
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:editorconfig/all",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"prettier",
		"@typescript-eslint",
		"editorconfig",
		":spellcheck"
	],
	"root": true,
	"rules": {
		"prettier/prettier": "error",
		"es6": true,
		"comments": true,
		"max-len": 240
	}
}
